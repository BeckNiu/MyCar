            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25"
            android:textColor="@color/white"
            android:textSize="27sp"
            android:layout_toRightOf="@+id/iv_sun"
            android:layout_marginLeft="40px"
            android:layout_marginTop="75px"
            android:id="@+id/Temperature"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="°"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/Temperature"
            android:layout_marginLeft="1px"
            android:layout_marginTop="75px"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="多云"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50px"
            android:layout_marginBottom="135px"
            android:id="@+id/info"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="东南风"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="135px"
            android:layout_marginBottom="135px"
            android:id="@+id/tv_windDirect"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1级"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="245px"
            android:layout_marginBottom="135px"
            android:id="@+id/tv_windPower"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="污染指数"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_below="@+id/iv_sun"
            android:layout_marginTop="110px"
            android:layout_marginLeft="50px"
            android:id="@+id/dirty"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_sun"
            android:text="良"
            android:layout_marginTop="110px"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_marginLeft="210px"
            android:id="@+id/tv_dirty"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016年4月22日 周五"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50px"
            android:layout_marginBottom="15px"
            android:id="@+id/Date"
            />
